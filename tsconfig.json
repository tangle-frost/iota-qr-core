{
    "compilerOptions": {
        "target": "es2017",
        "lib": [
            "es2016",
            "dom"
        ],
        "outDir": "dist",
        "module": "commonjs",
        "declaration": true,
        "moduleResolution": "node",
        "noImplicitAny": true,
        "noImplicitThis": true,
        "noImplicitReturns": true,
        "noUnusedLocals": true,
        "strictNullChecks": false,
        "types": [
            "@types/node"
        ],
        "esModuleInterop": true,
        "stripInternal": true,
        "inlineSourceMap": true,
        "noImplicitUseStrict": true
    },
    "include": [
        "src/**/*"
    ]
}